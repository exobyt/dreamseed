---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const seeds = await getCollection("seeds");
---

<Layout title="Seeds - Dreamseed">
  <div class="max-w-4xl mx-auto p-4">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold mb-2">Dream Seeds</h1>
      <p>Explore innovative ideas and concepts from creative minds.</p>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      {
        seeds.map(seed => (
          <a
            href={`/seeds/${seed.id}`}
            class="block">
            <div class="border p-4 hover:bg-gray-50">
              <h2 class="text-lg font-bold mb-2">{seed.data.title}</h2>
              <p class="mb-2">{seed.data.description}</p>
              <div class="card-footer">
                <div class="flex justify-between text-sm">
                  <span>{seed.data.author}</span>
                  <time>{seed.data.publishedAt.toLocaleDateString()}</time>
                </div>
								{seed.data.tags && (
									<div class="mt-2">
										{seed.data.tags.map(tag => (
											<span class="text-xs mr-2">#{tag}</span>
										))}
									</div>
								)}
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</Layout>
