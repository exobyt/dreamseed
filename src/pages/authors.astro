---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const authors = await getCollection('authors');
---

<Layout title="Authors - Dreamseed">
	<div class="max-w-4xl mx-auto p-4">
		<div class="text-center mb-8">
			<h1 class="text-2xl font-bold mb-2">
				Authors
			</h1>
			<p>
				Meet the creative minds behind the dream seeds.
			</p>
		</div>

		<div class="grid gap-4 md:grid-cols-2">
			{authors.map((author) => (
				<a href={`/authors/${author.id}`} class="block">
					<div class="border p-4 hover:bg-gray-50">
						<div class="flex items-center mb-2">
							{author.data.avatar && (
								<img src={author.data.avatar} alt={author.data.name} class="w-8 h-8 mr-2" />
							)}
							<h2 class="text-lg font-bold">{author.data.name}</h2>
						</div>
						<p class="mb-2">{author.data.bio}</p>
					</div>
				</a>
			))}
		</div>
	</div>
</Layout>
